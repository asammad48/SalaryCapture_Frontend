{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "disableReferencedProjectLoad": true,
    "disableSolutionSearching": true,
    "noResolve": false,
    "preserveSymlinks": true
  },
  "angularCompilerOptions": {
    "compilationMode": "partial",
    "enableIvy": true
  },
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}